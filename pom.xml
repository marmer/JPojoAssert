<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>JPojoAssert</artifactId>
    <groupId>io.github.marmer.testutils</groupId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>JPojoAssert</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <kotlin.code.style>official</kotlin.code.style>
        <sonar.organization>marmer-github</sonar.organization>
        <sonar.host.url>https://sonarcloud.io</sonar.host.url>
        <sonar.sources>src/main/*</sonar.sources>
        <sonar.tests>src/test/*</sonar.tests>
        <sonar.test.inclusions>**/*Test*/**</sonar.test.inclusions>
        <sonar.exclusions>**/*Test*/**</sonar.exclusions>
    </properties>

    <repositories>
        <repository>
            <id>mavenCentral</id>
            <url>https://repo1.maven.org/maven2/</url>
        </repository>
    </repositories>
    <modules>
        <module>JPojoAssert-processor</module>
        <module>JPojoAssert-end-to-end</module>
        <module>JPojoAssert-Vision</module>
    </modules>
</project>
